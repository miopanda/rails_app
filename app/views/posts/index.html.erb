<h1>トップページ</h1>

<%= link_to '新規投稿', '/posts/new' %>

<% @posts.each do |post| %>
<label class="post">
  <div class="checkbox-info">
    <input type="checkbox" class="checkbox">
    <span></span>
  </div>
  <div class="post-info">
    <div class="post-date">
      <%= post.created_at.to_s(:datetime_jp)  %>
    </div>
    <div class="post-memo">
      <%= post.memo %>
    </div>
  </div>
</label>
<% end %>

